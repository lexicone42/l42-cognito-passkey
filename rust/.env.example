# Required — from your AWS Cognito User Pool
COGNITO_CLIENT_ID=your-client-id
COGNITO_USER_POOL_ID=us-west-2_XXXXXXXXX
COGNITO_DOMAIN=your-app.auth.us-west-2.amazoncognito.com

# Optional — defaults shown
COGNITO_CLIENT_SECRET=
COGNITO_REGION=us-west-2
SESSION_SECRET=change-me-in-production
FRONTEND_URL=http://localhost:3000
PORT=3001

# Session backend: "memory" (dev) or "dynamodb" (prod)
SESSION_BACKEND=memory
DYNAMODB_TABLE=l42_sessions
DYNAMODB_ENDPOINT=

# Set to true when serving over HTTPS (Lambda/production)
SESSION_HTTPS_ONLY=false

# Cookie domain for cross-subdomain SSO (e.g. ".example.com")
# When unset, cookies are scoped to the exact backend host.
COOKIE_DOMAIN=

# Auth route prefix (default: /auth). Set to /_auth if CloudFront routes /_auth/* to Lambda.
# Leading / is added if missing; trailing / is stripped.
AUTH_PATH_PREFIX=/auth
